<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <solid
        android:color="@android:color/white"
        />

    <!--
      Until API level 12, bottomLeftRadius and bottomRightRadius are flipped!!!
      http://stackoverflow.com/questions/12505649/somethings-wrong-in-corner-radius-android
      -->
    <corners
        android:bottomRightRadius="@dimen/fast_scroller_section_indicator_size"
        android:topLeftRadius="@dimen/fast_scroller_section_indicator_size"
        android:topRightRadius="@dimen/fast_scroller_section_indicator_size"
        android:bottomLeftRadius="0dp"
        />

</shape>